<ul >
  <% @tasks.each do |task|%>
    <li class="list-unstyled">
      <input type="checkbox">
      <%= link_to task.title, task_path(task) %>
      <%= link_to "edit task", edit_task_path(task) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end %>

<%= link_to "create new task", new_task_path %>
</ul>
